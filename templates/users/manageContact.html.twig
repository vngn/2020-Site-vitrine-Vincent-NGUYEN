{% extends 'base.html.twig' %}

{% block title %}Gérer les messages{% endblock %}

{% block body %}
<div class="example-wrapper-title">
    <h1>Gérer les messages</h1>
</div>

<div class="example-wrapper">

    {% for contact in contact %}
    <div class="individual-block-users-index">
        <ul class="block-users-index users-color">
            <li>
                <span>{{ contact.firstname }} {{ contact.name }}</span>
                <span>{{ contact.post }} {{ contact.society }}</span>
                <span>{{ contact.email }} {{ contact.phone }}</span>
                <span>{{ contact.createdAt | date ('d/m/Y (H:i)') }}</span>
                <span>{{ contact.title }}</span>
                <span>{{ contact.content | raw }}</span>
                <span><a href="#" class="btn shadow-1 rounded-1 red modal-trigger" data-target="modal-delete"
                        data-id="{{ contact.id }}" data-nom="{{ contact.name }}">Supprimer</a></span>
            </li>
        </ul>
    </div>
    {% endfor %}

    <div class="modal shadow-1 white falling" id="modal-delete" data-ax="modal">
        <div class="modal-header">Supprimer le message</div>
        <div class="divider"></div>
        <div class="modal-content"></div>
        <div class="divider"></div>
        <div class="modal-footer">
            <a href="" class="btn red">valider</a>
            <button data-target="modal-delete"
                class="ml-auto btn shadow-1 rounded-1 small primary modal-trigger">Fermer</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    window.onload = () => {
        let modal = new Axentix.Modal('#modal-delete');
        let supprimer = document.querySelectorAll(".modal-trigger")
        for (let bouton of supprimer) {
            bouton.addEventListener("click", function () {
                document.querySelector(".modal-footer a").href =
                    `/contact/delete/${this.dataset.id}`
                document.querySelector(".modal-content").innerText =
                    `Êtes-vous sûr(e) de vouloir supprimer le message de ${this.dataset.nom} ?`
            })
        }
    }
</script>
{% endblock %}