{% extends 'base.html.twig' %}

{% block title %}Article du blog en détail{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="blog-color">Article du blog en détail</h1>
</div>

<article class="mh-menu site blog-color">
    <h2>{{ blog.title }}</h2>
    <div class="metadata">Ecrit le {{ blog.createdAt | date('d/m/Y')}} à {{ blog.createdAt | date('H:i')}}
        dans la catégorie {{ blog.categories }}</div>
    <div class="content">
        {# <img src="{{ blog.image }}" alt=""> #}
        <br />
        {{ blog.content | raw}}
        <br />
    </div>
</article>

{% if is_granted('ROLE_USER') %}
<div class="comment example-wrapper blog-color">
    {{ form_start(blogCommentForm) }}
    {{ form_row(blogCommentForm.content, {'attr': {'placeholder': "Votre commentaire"}}) }}

    <div class="btn-site wrapper">
        <button type="submit" class="cta">
            <span class="next-button">Ajouter un commentaire</span>
            {{ include('includes/next-button.html.twig') }}
            {{ form_end(blogCommentForm) }}
        </button>
    </div>
</div>

{% else %}

{{ include('includes/show-visitors.html.twig') }}

{% endif %}

<section id="commentaires">
    <h1 class="example-wrapper blog-color">{{ blog.blogComment | length }} commentaire(s) :</h1>
    <div class="comment example-wrapper blog-color">
        {% for blogComment in blog.blogComment %}
        <div class="row">
            <div class="col-3">
                {{ blogComment.users.firstname }} {{ blogComment.users.name }}
                (<small>{{blogComment.createdAt | date ('d/m/Y à H:i')}}</small>)
            </div>
            <div class="col">
                {{blogComment.content | raw}}
            </div>
        </div>
        <hr />
        {%  endfor %}

    </div>
</section>

{% endblock %}

{% block javascripts %}

{% endblock %}