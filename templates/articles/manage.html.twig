{% extends 'base.html.twig' %}

{% block title %}Gérer les articles de la page Articles{% endblock %}

{% block body %}
<div class="example-wrapper-title">
    <h1 class="articles-color">Gérer les {{ app.user.articles| length }} articles<br />de la page Articles</h1>
</div>

<div class="example-wrapper">
    {% for article in articles %}
    <div class="block-manage users-color">
        <div class="block-manage-bis users-color">
            <span>{{ article.id }} - <a href="{{ path('articles_show', {'id': article.id}) }}"
                    class="link">{{ article.title }}</a>
            </span>
            <br />
            <span>{{ article.categories }} - {{ article.createdAt | date ('d/m/Y') }}</span>
            <br />
            <span class="check-box-line">
                <label class="form-switch mt-2">Article désactivé
                    <input type="checkbox" {{ (article.active) ? 'checked' : '' }} data-id="{{ article.id }}" />
                    <span class="slider"></span>Article visible
                </label>
            </span>
            <br />
            <span>
                <button class="btn-manage-edit" type="submit">
                    <a href="{{ path('articles_edit', {'id': article.id}) }}">Modifier l'article / Gérer les
                        commentaires ({{ article.articleComment | length }})</a>
                </button>
            </span>
            <span>
                <button class="btn-manage-delete" type="submit">
                    <a href="#" class="modal-trigger" data-target="modal-delete" data-id="{{ article.id }}"
                        data-titre="{{ article.title }}">Supprimer l'article et ses commentaires</a>
                </button>
            </span>
        </div>
    </div>
    {% endfor %}
    <div class="modal shadow-1 white falling" id="modal-delete" data-ax="modal">
        <div class="modal-header">Supprimer un article</div>
        <div class="divider"></div>
        <div class="modal-content"></div>
        <div class="divider"></div>
        <div class="modal-footer">
            <a href="" class="btn red">valider</a>
            <button data-target="modal-delete"
                class="ml-auto btn shadow-1 rounded-1 small primary modal-trigger">Fermer</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- JS Modal -->
<script>
    window.onload = () => {
        let activer_message_forum = document.querySelectorAll("[type=checkbox]")
        for (let bouton of activer_message_forum) {
            bouton.addEventListener("click", function () {
                let xmlhttp = new XMLHttpRequest;
                xmlhttp.open("get", `/articles/activate/${this.dataset.id}`)
                xmlhttp.send()
            })
        }
        let supprimer = document.querySelectorAll(".modal-trigger")
        for (let bouton of supprimer) {
            bouton.addEventListener("click", function () {
                document.querySelector(".modal-footer a").href = `/articles/delete/${this.dataset.id}`
                document.querySelector(".modal-content").innerText =
                    `Êtes-vous sûr(e) de vouloir supprimer l'article "${this.dataset.titre}" ?`
            })
        }
    }
</script>
{% endblock %}