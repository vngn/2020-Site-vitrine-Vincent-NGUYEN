{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<div class="example-wrapper zone">
    <h1>Contact :</h1>
    <form method="post">
        <div class="form-field">
            <label for="name">Nom* :</label>
            <input type="text" id="name" name="name" class="form-control">
        </div>
        <div class="form-field">
            <label for="firstname">Prénom* :</label>
            <input type="text" id="firstname" name="firstname" class="form-control">
        </div>
        <div class="form-field">
            <label for="society">(Société :)</label>
            <input type="text" id="society" name="society" class="form-control">
        </div>
        <div class="form-field">
            <label for="post">(Fonction :)</label>
            <input type="text" id="post" name="post" class="form-control">
        </div>
        <div class="form-field">
            <label for="email">E-mail* :</label>
            <input type="email" id="email" name="email" class="form-control">
        </div>
        <div class="form-field">
            <label for="phone">(Téléphone :)</label>
            <input type="number" id="phone" name="phone" class="form-control">
        </div>
        <div class="form-field">
            <label for="title">Objet* :</label>
            <input type="text" id="title" name="title" class="form-control">
        </div>
        <div class="form-field">
            <label for="content">Message* :</label>
            <input type="textarea" id="content" name="content" class="form-control">
        </div>
        <button class="btn shadow-1 rounded-1 green dark-2">Valider</button>
    </form>
</div>
{% endblock %}