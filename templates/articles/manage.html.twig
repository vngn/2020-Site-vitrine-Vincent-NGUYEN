{% extends 'base.html.twig' %}

{% block title %}Gérer les articles de la page Articles{% endblock %}

{% block body %}
<div class="example-wrapper example-wrapper">
    <h1 class="articles-color">Gérer les {{ app.user.articles| length }} articles de la page Articles</h1>
</div>
<div class="example-wrapper articles-color">
    <table class="table striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                {# <th>catégorie</th> #}
                <th>Date</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                {# <td>{{ article.categories }}</td> #}
                <td>{{ article.createdAt | date }}</td>
                <td>
                    <label class="form-switch mt-2">
                        <input type="checkbox" {{ (article.active) ? 'checked' : '' }} data-id="{{ article.id }}" />
                        <span class="slider"></span>
                    </label>
                </td>
                <td>
                    <a href="{{ path('articles_edit', {'id': article.id}) }}"
                        class="btn shadow-1 rounded-1 red modal-trigger">Modifier</a>

                    <a href="{{ path('articles_edit', {'id': article.id}) }}"
                        class="btn shadow-1 rounded-1 red modal-trigger">Gérer les commentaires
                        ({{ article.articleComment | length }})</a>

                    <a href="#" class="btn shadow-1 rounded-1 red modal-trigger" data-target="modal-delete"
                        data-id="{{ article.id }}" data-titre="{{ article.title }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="modal shadow-1 white falling" id="modal-delete" data-ax="modal">
        <div class="modal-header">Supprimer un article</div>
        <div class="divider"></div>
        <div class="modal-content">
        </div>
        <div class="divider"></div>
        <div class="modal-footer">
            <a href="" class="btn red">valider</a>
            <button data-target="modal-delete"
                class="ml-auto btn shadow-1 rounded-1 small primary modal-trigger">Fermer</button>
        </div>
    </div>
    {% endblock %}

    {% block javascripts %}
    <script>
        window.onload = () => {
            let modal = new Axentix.Modal('#modal-delete');
            let activer = document.querySelectorAll("[type=checkbox]")
            for (let bouton of activer) {
                bouton.addEventListener("click", function () {
                    let xmlhttp = new XMLHttpRequest;

                    xmlhttp.open("get", `/articles/activate/${this.dataset.id}`)
                    xmlhttp.send()
                })
            }
            let supprimer = document.querySelectorAll(".modal-trigger")
            for (let bouton of supprimer) {
                bouton.addEventListener("click", function () {
                    document.querySelector(".modal-footer a").href = `/articles/delete/${this.dataset.id}`
                    document.querySelector(".modal-content").innerText =
                        `Êtes-vous sûr(e) de vouloir supprimer l'article "${this.dataset.titre}"`
                })
            }

            // raffraichir la page 0.5s après le changement de valeur du bouton active
            $('.form-switch').click(function () {
                setTimeout(function () {
                    window.location.reload();
                }, 500);
            });
        }
    </script>
</div>
{% endblock %}