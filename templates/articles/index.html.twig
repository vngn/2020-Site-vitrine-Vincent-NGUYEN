{% extends 'base.html.twig' %}

{% block title %}La section Articles{% endblock %}

{% block body %}

<video class="video-title" height="360" autoplay="true" loop muted>
    <source src="{{asset('bgvideo/background-video.mp4')}}" type="video/mp4" />
</video>
<div class="video-title-text">Articles</div>

{% for article in articles %}

<ul class="block-articles articles-color">
    <li><a href="">
            <span>{{ article.createdAt | date ('d/m/Y') }}</span>
            <span>{{ article.title }}</span>
            <span>{{ article.categories }}</span>
        </a>
        <span>{{ article.content | raw}}</span>
    </li>
</ul>

<div class="btn-site wrapper">
    <a class="cta" href="{{ path('articles_show', {'id': article.id}) }}">
        <span class="next-button">Lire la suite / {{ article.articleComment | length }} commentaire(s)</span>
        {{ include('includes/next-button.html.twig') }}
    </a>
</div>
{% endfor %}

{% endblock %}

{% block javascripts %}

{% endblock %}