{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="example-wrapper block-users visitors-color">
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) avec l'Email {{ app.user.username }}. <a href="{{ path('app_logout') }}"
                class="btn rounded-1 press amaranth dark-1">Déconnexion ici</a>
        </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal ">Connexion :</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
            autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div> #}

        <button class="btn shadow-1 rounded-1 green dark-2" type="submit">
            Valider
        </button>
        <a href="{{ path('app_forgot_password_request') }}" class="btn rounded-1 press amaranth dark-1">Mot de passe
            oublié</a>
        <a href="{{ path('app_register') }}" class="btn rounded-1 press green dark-2">Créer un compte</a>
    </form>
</div>
{% endblock %}