{% extends 'base.html.twig' %}

{% block title %}La section Blog{% endblock %}

{% block body %}
<div class="example-wrapper all-title-except-home">
    <div class="example-wrapper home-color">
        <div class="title">Blog</div>
    </div>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
</div>

{% for articleBlog in blog %}

<ul class="block-blog blog-color">
    <li>
        <span>{{ articleBlog.createdAt | date ('d/m/Y') }}</span>
        <span>{{ articleBlog.title }}</span>
        <span>{{ articleBlog.categories }}</span>
        <span>{{ articleBlog.content | raw }}</span>
    </li>
</ul>

<div class="btn-site wrapper">
    <a class="cta" href="{{ path('blog_show', {'id': articleBlog.id}) }}">
        <span class="next-button">Lire la suite / {{ articleBlog.blogComment | length }} commentaire(s)</span>
        {{ include('includes/next-button.html.twig') }}
    </a>
</div>
{% endfor %}
{% endblock %}

