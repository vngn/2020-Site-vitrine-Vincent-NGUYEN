{% extends 'base.html.twig' %}

{% block title %}Modificcation du profil de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
{% for message in app.flashes('message') %}
<div class="p-3 my-2 rounded-2 success">{{ message }}</div>
{% endfor %}

<div class="example-wrapper-title">
    <h1>Modification du profil de {{ app.user.firstname }} {{ app.user.name }}</h1>
</div>

<div class="example-wrapper block-users users-color">
    {{ form_start(form) }}
    <img src="{{ asset('uploads/photos/'~ app.user.photo) }}" alt="avatar" class="photo-form">
    {{ form_row(form.photo) }}
    {{ form_row(form.name) }}
    {{ form_row(form.firstname) }}
    {{ form_end(form) }}
</div>
{% endblock %}